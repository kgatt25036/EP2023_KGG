@model IEnumerable<Presentation.Models.ViewModels.TicketViewModel>

@{
    ViewData["Title"] = "ShowAllTickets";
}

<h1>ShowAllTickets</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatRow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatColumn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightIdFK)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cancelled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatRow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatColumn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightIdFK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cancelled)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id /*todo*/}) |
                    @Html.ActionLink("Details", "DetailedTickets", new {  id=item.Id  }) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
