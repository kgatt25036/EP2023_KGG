@model IEnumerable<Presentation.Models.ViewModels.FlightsViewModels>

@{
    ViewData["Title"] = "ShowFlights";
}

<h1>flights</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SeatRows)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatColumns)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetailPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatRows)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatColumns)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartureDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryTo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RetailPrice)
                </td>
                <td>
                    @Html.ActionLink("Details", "FlightDetails", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
